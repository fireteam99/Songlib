        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add a song" BorderPane.alignment="CENTER" />
                <Label fx:id="enterName" text="Name*" />
                <TextField fx:id="nameTxtBox" />
                <Label fx:id="enterArtist" text="Artist*" />
                <TextField fx:id="artistTxtBox" />
                <Label fx:id="enterAlbum" text="Album" />
                <TextField fx:id="albumTxtBox" />
                <Label fx:id="enterYear" text="Year" />
                <TextField fx:id="yearTxtBox" />
            </children>
            <BorderPane.margin>
                <Insets left="200.0" right="200.0" />
            </BorderPane.margin>
        </VBox>
    </center>
